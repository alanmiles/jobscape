<%= render 'shared/error_messages', :object => f.object %>
<div class="field">
  <%= f.label :name %> <small>(Your normal first name and family name)</small><br />
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :email %><br />
  <%= f.text_field :email %>
</div>
<div class="field">
  <%= f.label :password %> <small>(at least 6 characters/numbers)</small><br />
  <%= f.password_field :password %>
</div>
<div class="field">
  <%= f.label :password_confirmation, "Confirmation" %> <small>(repeat password)</small><br />
  <%= f.password_field :password_confirmation %>
</div>

<div class="field">
  <% if session[:invited] == nil %>
    <%= f.label :account, "Account-type" %> <small>(see panel right)</small> &nbsp;
    <%= select( :user, :account, @accounts ) %>
  <% else %>
    Signing up for an Employee account with <%= @business.name %>.
    <%= f.hidden_field :account %>
  <% end %>
</div>

