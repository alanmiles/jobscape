<div class ="shift_center_50">
  <%= form_for(@content) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
    <div class="field">
      <%= f.label :header, "Header *" %><br />
      <%= f.text_field :header %>
    </div>
    <div class="field">
      <%= f.label :content, "Content *" %><br />
      <%= f.text_area :content, :class => "upsize" %>
    </div>
    <div class="actions">
      <%= f.submit :class => "create round" %>
    </div>
  <% end %>
</div>
