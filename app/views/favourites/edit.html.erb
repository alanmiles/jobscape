<div class="r-float">
  <%= link_to "Entire portrait", user_portrait_path(@favourite.user) %>
</div>

<%= link_to image_tag("pageback.png", :title => "Favourites list"), user_favourites_path(@favourite.user_id), :class => "magnify" %>

<h4 class="over"><%= @favourite.user.name %></h4>

<div class="shift_center_50">
  <%= form_for @favourite do |f| %>
    <%= render 'fields', :f => f %> 
    <div class="actions">
      <%= f.submit :class => "create round" %>
    </div>
  <% end %>
</div>
