<div class="r-float">
  <%= link_to "Entire portrait", user_portrait_path(@user) %>
</div>

<%= link_to image_tag("pageback.png", :title => "Limitations list"), user_limitations_path(@user), :class => "magnify" %>

<h4 class="over"><%= @limitation.user.name %></h4>

<div class="shift_center_50">
  <%= form_for([@user,@limitation]) do |f| %>
    <%= render 'fields', :f => f %> 
    <div class="actions">
      <%= f.submit :class => "create round" %>
    </div>
  <% end %>
</div>
