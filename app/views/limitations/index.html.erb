<div class = "r-float">
  <% unless @user.max_limitations? %>
    <%= link_to "Add a limitation", new_user_limitation_path(@user) %><br /> 
  <% end %>
  <%= link_to "Full Portrait", user_portrait_path(@user) %>
</div>

<h1>Limitations that employers may need to know about</h1>
<div class="display_wider">
  <em>
    <% if @user.has_limitations? %>   
      Click on <%= image_tag("cancel.png", :size => "15x15") %> to delete 
      and <%= image_tag("select.png", :size => "15x15") %> to modify a limitation.
      <br /><br />
      <% if @user.count_limitations > 1 %>
        Then click and drag the list-items until the most important limitation is at the top.
      <% end %>
    <% end %>
    You can add up to 3 limitations.
  </em>
</div>
<hr />
<ul id="limitation" style="cursor: move">
  <% @limitations.each do |f| %>
  <li id="item_<%= f.id %>" class="no_bullet">
    <span style="vertical-align:top">
       <%= link_to(image_tag("cancel.png", :size => "15x15"), f, 
                   	:method => :delete, 
                   	:confirm => "You sure?",
                   	:title => "Remove this limitation") %>
    </span> &nbsp;
    <span style="vertical-align:top"> 
       <%= link_to(image_tag("select.png", :size => "15x15"), 
    			edit_limitation_path(f), 
    			:title => "Edit this limitation") %> 
    </span>&nbsp;    
    <span style = "display:inline-block; width:80%"><%= f.limitation %></span>
   
   </li>
  <% end %>
</ul>

<%= sortable_element('limitation', 
    :url => { :action => "sort", :id => @user }, 
    
    :complete => visual_effect(:highlight, "limitation")) %>

