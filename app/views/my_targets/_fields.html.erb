  <%= render 'shared/error_messages', :object => f.object %>

  <div class="shift_center_50">
  <div class="field">
    <%= f.label :target %><br />
    <%= f.text_area :target, :maxlength => 255, :cols => 60, :rows => 3 %>
    <span id="char-count" style = "color:blue; padding-left: 5px"><%= @characters_left %></span>
  </div>
  
  <div class="field">
    <%= f.label :target_date %><br />
    <%= f.date_select :target_date %>
  </div>
  
  <div class="field">
    <%= f.label :achieved, "Check if you've already achieved the target" %> &nbsp;
    <%= f.check_box :achieved %>
  </div>
  
  <% if @allow_cancel == true %>
    <div class="field">
      <%= f.label :cancelled, "Check if you now need to cancel the target" %> &nbsp;
      <%= f.check_box :cancelled %>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :note %> <small>( - anything you might want to remember later )</small><br />
    <%= f.text_area :note, :maxlength => 255, :cols => 60, :rows => 3 %>
    <span id="char-count-note" style = "color:blue; padding-left: 5px"><%= @characters_left_note %></span>
  </div>
  
  <%= f.hidden_field :placement_id %>
  
  
<% content_for :javascript do %>

  <%= javascript_tag do %>

    $('#target_target').live('keyup keydown', function(e) {
    var maxLen = 255;
    var left = maxLen - $(this).val().length;
    $('#char-count').html(left);
    });
    
    $('#target_note').live('keyup keydown', function(e) {
    var maxLen = 255;
    var left = maxLen - $(this).val().length;
    $('#char-count-note').html(left);
    });
    
  <% end %>
<% end %>
