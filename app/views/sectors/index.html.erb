<%= link_to image_tag("pageback.png", :size => "25x25", :title => "Previous"), admin_path %>

<div class = "r-float">
  <%= link_to "Add a new sector", new_sector_path %><br />
</div>

<div id="listing"> 
  <ul class="no_dec">
    <% @sectors.each do |sector| %>
      <li><%= link_to sector.sector, edit_sector_path(sector), :title => "Edit" %>
        <span class="r-float">
          <% unless sector.associated_businesses? || sector.associated_vacancies? %>
            &nbsp;
            <%= link_to(image_tag("delete.png"), sector, 
                   :method => :delete, 
                   :confirm => "Are you sure you want to delete '#{sector.sector}'?",
                   :title => "Delete '#{sector.sector}'") %>
          <% end %>
        </span>
      </li>
    <% end %>
  </ul>
</div>
