<div class = "r-float">
<%= link_to "All jobs", business_jobs_path(@business) %>
</div>

<h1><%= @title %>  <small style = "font-size:0.6em"><%= link_to "(change)", edit_job_path(@job) %></small></h1>
<p><strong><%= @job.business.name %></strong></p>
<p><strong>Category:</strong> <%= @job.occupation.name %> &nbsp;
   <small style = "font-size:0.85em"><%= link_to "(change)", edit_job_path(@job) %></small>
</p>

<div class = "display_box grayborder round rightpos">
  <strong>EMPLOYEES</strong>
</div>

<div class = "display_box grayborder round">
  <strong>ACHIEVEMENT PLAN</strong> <br />
   <span id = "status"><%= link_to plan_status, plan_path(@plan) %></span>
</div>
<br />

<div class = "display_box grayborder round">
  <strong>CURRENT VACANCIES</strong> <br />
   <% if @plan.complete? %>
     <%= @count_vacancies %> <br />
     <% if Vacancy.zero_for?(@job) %>
       <%= link_to "Add a vacancy", new_vacancy_path %>
     <% else %>
       <% if @job.vacancy_record_count > 1 %>
         <%= link_to "Details", vacancies_path %>
       <% else %>
         <%= link_to "Details", @vacancy %>
       <% end %>
     <% end %>
   <% else %>
     <span class="highlt">First complete the A-Plan.</span>
   <% end %>
</div>

