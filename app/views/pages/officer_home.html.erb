<div class = "r-float">

  <% if current_user.admin? %>
    <%= link_to "Return to Admin Mode", standard_to_admin_path %><br />
  <% end %>

  <%= link_to "Add a new business", new_business_path %><br />
  <% if @user.belongs_to_business? %>
    <%= link_to "Switch business", select_business_path unless @user.single_business? %>
  <% end %>
</div>


<h1>
  Home - <%= @user.name %>
</h1>

<% if @no_business == true %>
  <div class = "display_medium round grayborder">
    <h4 class="highlt">BUSINESS DETAILS REQUIRED</h4>
    You've signed up for a Business account, but you haven't entered the details of your business yet.<br /><br/>
    You now have two options:<br /><br />
    <ol>
      <li><%= link_to "Add your business now", new_business_path %></li>
      <li><% link_to "Go to Settings", edit_user_path(@user) %> and change to one of the other HYGWIT account-types</li>
    </ol>
  </div>
<% else %>
  <h4><%= @business.name %>, <%= @business.city %></h4>
  
  
  <div class="menu_box round grayborder">
    <% if @business.no_jobs? %>
      <i class="highlt round">Before starting with employees, set up departments, then jobs.</i>
      <br /><br />
    <% end %> 
    <ul>
      <li><%= link_to "Business details", @business %></li>
      <li><%= link_to "Departments", business_departments_path(@business.id) %></li>
      <li><%= link_to "Jobs", business_jobs_path(@business.id) %></li>
      <li><%= link_to "Employees (HYGWIT users)", officer_users_path %></li>
      <li><%= link_to "HYGWIT invitations", business_invitations_path(@business) %></li>
      <li><%= link_to "HYGWIT officers", "#" %></li>
      
    </ul>
    
    <strong><u>ARCHIVE</u></strong>
    <ul>
      <li><%= link_to "Archived departments", business_hidden_departments_path(@business) %></li>
      <li><%= link_to "Archived jobs", business_inactive_jobs_path(@business) %></li>
      <li><%= link_to "Former employees", officer_leavers_path %></li>
    </ul>
  </div>
<% end %>

