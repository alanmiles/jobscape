
  <%= render 'shared/error_messages', :object => f.object %>
  
  <div class="field">
    <%= f.label :quantity, "Number of vacancies" %>&nbsp;
    <%= f.text_field :quantity, :size => 5 %>
  </div>
  <div class="field">
    <strong>Terms</strong> &nbsp; &nbsp;
    <%= select(:vacancy, :full_time, { "Full-time" => true, "Part-time" => false }) %>
    <span style = "margin-left: 100px"><%= f.label :voluntary, "Check if an unpaid volunteer job" %>
    <%= f.check_box :voluntary %></span>
  </div>
  <div class="field">
    <strong>Salary</strong> &nbsp; £   
    <%= f.text_field :annual_salary, :size => 5 %>
    per year <strong><em>OR</em></strong> £
    <%= f.text_field :hourly_rate, :size => 5 %>
    per hour <strong><em>OR</em></strong> leave both blank if voluntary work
  </div>
  
  <div class="field">
    <%= f.label :contact_person, "Person handling applications" %>&nbsp;
    <%= f.text_field :contact_person %><br />
  </div>
  <div class="field">
    <%= f.label :close_date, "Closing-date for applications" %> &nbsp;
    <%= f.date_select :close_date %>
  </div>
  <div class="field">
    <%= f.label :notes %> <small>(e.g. special working hours, length of engagement)</small><br />
    <%= f.text_area :notes, :cols => 60, :rows => 2 %>
  </div>
  <%= f.hidden_field :job_id %> 
  <%= f.hidden_field :sector_id %> 

