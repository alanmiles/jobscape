<div class = "r-float">
  <% unless @user.max_achievements? %>
    <%= link_to "Add an achievement", new_user_achievement_path(@user) %><br /> 
  <% end %>
  <%= link_to "Full Portrait", user_portrait_path(@user) %>
</div>

<h1>Achievements for <%= @user.name %></h1>
<div class="display_wider">
  <em>
    <% if @user.has_achievements? %>   
      Click on <%= image_tag("cancel.png", :size => "15x15") %> to delete 
      and <%= image_tag("select.png", :size => "15x15") %> to modify an achievement.
      <br /><br />
      <% if @user.count_achievements > 1 %>
        Then click and drag the achievements to arrange them in descending order of importance.
      <% end %>
    <% end %>
    You can add up to 3 achievements.
  </em>
</div>
<hr />
<ul id="achievements-list">
  <% @achievements.each do |f| %>
  <li id="achievement_<%= f.id %>" class="no_bullet">
    <span style="vertical-align:top">
       <%= link_to(image_tag("cancel.png", :size => "15x15"), f, 
                   	:method => :delete, 
                   	:confirm => "You sure?",
                   	:title => "Remove this achievement") %>
    </span> &nbsp;
    <span style="vertical-align:top"> 
       <%= link_to(image_tag("select.png", :size => "15x15"), 
    			edit_achievement_path(f), 
    			:title => "Edit this achievement") %> 
    </span>&nbsp;    
    <span class="handle" style = "display:inline-block; width:80%"><%= f.achievement %></span>
   
   </li>
  <% end %>
</ul>

<% content_for :javascript do %>

  <%= javascript_tag do %>
 
    $('#achievements-list').sortable(
     {
       	axis: 'y',
	dropOnEmpty: false,
	handle: '.handle',
	cursor: 'crosshair',
	items: 'li',
	opacity: 0.4,
	scroll: true,
	update: function(){
	  $.ajax({
	    type: 'post',
	    data: $('#achievements-list').sortable('serialize') + '&id=<%=@user.id %>',
	dataType: 'script',
	complete: function(request){
	  $('#achievements-list').effect('highlight');
	},
	url: 'achievements/sort'})
      }
     })

   <% end %>
<% end %>
