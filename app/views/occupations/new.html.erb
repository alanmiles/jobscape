<div class = "r-float">
<%= link_to "Cancel", occupations_path %>
</div>

<h1><%= @title %></h1>
<%= form_for(@occupation) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>
  <div class="actions">
    <%= f.submit "Create" %>
  </div>
<% end %>
