<div class = "r-float">
  <%= link_to "Home", jobseeker_home_path %>
</div>

<h1><%= @title %></h1>
<h4><%= @user.name.upcase %></h4>

<div class="two_column rightpos">
  <h4 class="shallow">What they say about me  &nbsp;<small><%= link_to "(Update)", user_characteristics_path(@user) %></small></h4>
  <ul>
    <% @characteristics.each do |characteristic| %>
      <li><%= characteristic.characteristic %></li>
    <% end %>
  </ul>
</div>

<div class="two_column">
  <h4 class="shallow">Achievements  &nbsp;<small><%= link_to "(Update)", user_achievements_path(@user) %></small></h4>

  <ul>
    <% @achievements.each do |achievement| %>
      <li><%= achievement.achievement %></li>
    <% end %>
  </ul>
</div>  
<hr /> 
<div class="two_column rightpos">  
  <h4 class="shallow">My favourite things  &nbsp;<small><%= link_to "(Update)", user_favourites_path(@user) %></small></h4>
  <ul>
    <% @favourites.each do |favourite| %>
      <li><%= favourite.favourite %></li>
    <% end %>
  </ul>
</div>

<div class="two_column">
  <h4 class="shallow">My qualifications &nbsp;<small><%= link_to "(Update)", user_qualifications_path(@user) %></small></h4>
  <ul>
    <% @qualifications.each do |qualification| %>
      <li><%= qualification.qualification %></li>
    <% end %>
  </ul>
</div>
<hr />

<div class="two_column rightpos"> 
  <h4 class="shallow">It drives me mad when ...  &nbsp;<small><%= link_to "(Update)", user_dislikes_path(@user) %></small></h4>
  <ul>
    <% @dislikes.each do |dislike| %>
      <li><%= dislike.dislike %></li>
    <% end %>
  </ul>
</div>

<div class="two_column"> 
  <h4 class="shallow">My strengths &nbsp;<small><%= link_to "(Update)", user_strengths_path(@user) %></small></h4>
  <ul>
    <% @strengths.each do |strength| %>
      <li><%= strength.strength %></li>
    <% end %>
  </ul>
</div>

<hr />
<div class="two_column rightpos"> 
  <h4 class="shallow">Possible limitations &nbsp;<small><%= link_to "(Update)", user_limitations_path(@user) %></small></h4>
  <ul>
    <% if @user.count_limitations == 0 %>
      <li>None</li>
    <% else %>
      <% @limitations.each do |limitation| %>
        <li><%= limitation.limitation %></li>
      <% end %>
    <% end %>
  </ul>
</div>

<div class="two_column">
  <h4 class="shallow">In my sights &nbsp;<small><%= link_to "(Update)", user_aims_path(@user) %></small></h4>
  <ul>
    <% if @user.count_aims == 0 %>
      <li>None</li>
    <% else %>
      <% @aims.each do |aim| %>
        <li><%= aim.aim %></li>
      <% end %>
    <% end %>
  </ul>
</div>
<hr />
<div class="two_column rightpos">

</div>

<div class="two_column rightpos">
  <h4 class="shallow">And finally ... &nbsp;<small><%= link_to "(Update)", edit_user_portrait_path(@user) %></small></h4>
  <ul>
    <% if @portrait.notes? %>
      <li><%= @portrait.notes %></li>
    <% end %>
    <% if @portrait.worked_before == false %>
      <li>I haven't worked before.</li>
    <% end %>
    <li><%= legality %></li>
    <li><%= public_view %></li>
  </ul>
</div>
  
<div class="two_column">
  <h4 class="shallow">My previous jobs &nbsp;<small><%= link_to "(Update)", user_previousjobs_path(@user) %></small></h4>
  <ul>
    <% if @user.count_previousjobs == 0 %>
      None
    <% else %>
      <% @previousjobs.each do |previousjob| %>
        <li><%= previousjob.job %> <em> - <%= previousjob.service_length %></em></li>
      <% end %>
    <% end %>
  </ul>
</div>
<hr />
<div class="two_column wide_85">
  <h4 class="shallow">References &nbsp;<small><%= link_to "(Update)", user_references_path(@user) %></small></h4>
  <ul>
    <% if @user.count_references == 0 %>
      <li>None provided</li>
    <% else %>
      <% @references.each do |reference| %>
        <li><strong><%= reference.name %></strong> <em>(<%= reference.what_relation %>)</em><br />
            <% unless reference.role.empty? && reference.location.empty? %>
              <% unless reference.role.empty? %>
                <%= reference.role %>
                <% unless reference.location.empty? %>
                  at <%= reference.location %>
                <% end %>
              <% else %>
                <%= reference.location %>
              <% end %>
              <br />
            <% end %>
            <% unless reference.address.empty? %>
              <em>Address: </em><%= reference.address %><br />
            <% end %>
            <% unless reference.phone.empty? %>
              <em>Phone: </em><%= reference.phone %><br />
            <% end %>
            <em>Email: </em><%= reference.email %>
            <% if @portrait.public == true %>
              <br />
              <% if reference.portrait_rating == 7 %>
                <span class="highlt">Has not yet commented on this Portrait.</span>
              <% else %>
                Has sent a comment on this Portrait.
              <% end %>
            <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
  
  
  
  


