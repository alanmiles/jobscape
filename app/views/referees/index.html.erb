<div class = "r-float">
  <% unless @user.max_referees? %>
    <%= link_to "Add a reference", new_user_referee_path(@user) %><br /> 
  <% end %>
  <%= link_to "Full Portrait", user_portrait_path(@user) %>
</div>

<h1><%= @user.name %>'s references</h1>
<div class="display_wider">
  <em>
    You can add up to 3 references. 
    <% if @user.has_referees? %>   
      Click on <%= image_tag("cancel.png", :size => "15x15") %> to delete 
      and <%= image_tag("select.png", :size => "15x15") %> to modify a record.
    <% end %>
  </em>
</div>
<ul>
  <% @referees.each do |referee| %>
    <li class="no_bullet">
       <span style="vertical-align:top">
       <%= link_to(image_tag("cancel.png", :size => "15x15"), referee, 
                   	:method => :delete, 
                   	:confirm => "You sure?",
                   	:title => "Remove this reference") %>
       </span> &nbsp;
       <span style="vertical-align:top"> 
         <%= link_to(image_tag("select.png", :size => "15x15"), 
    			edit_referee_path(referee), 
    			:title => "Edit this reference") %> 
       </span>&nbsp;   
       <strong><%= referee.name %></strong> <em>(<%= referee.what_relation %>)</em><br />
       <div style = "font-size:90%; margin-left:25px">
         <% unless referee.role.empty? && referee.location.empty? %>
           <% unless referee.role.empty? %>
             <%= referee.role %>
             <% unless referee.location.empty? %>
               at <%= referee.location %>
             <% end %>
           <% else %>
             <%= referee.location %>
           <% end %>
           <br />
         <% end %>
         <% unless referee.address.empty? %>
           <em>Address: </em><%= referee.address %><br />
         <% end %>
         <% unless referee.phone.empty? %>
           <em>Phone: </em><%= referee.phone %><br />
         <% end %>
         <em>Email: </em><%= referee.email %>
         <% if @portrait.public? %>
           <br />
           <% if referee.portrait_rating == 7 %>
             <span class="highlt round">Has been asked to review your Portrait, but has not yet responded.</span>
           <% else %>
             <strong><i>Has reviewed your Portrait.</i></strong>
           <% end %>
         <% end %>
       <div>
    </li>
  
  
  <% end %>
</ul>
