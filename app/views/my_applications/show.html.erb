<%= link_to image_tag("pageback.png", :title => "Previous"), my_applications_path, :class => "magnify" %>

<div>

  <strong>
    <% if @vacancy.quantity == 1 %>
      <%= @vacancy.job.job_title %>
    <% else %>
      <%= "#{@vacancy.quantity.to_s} #{@vacancy.job.job_title.pluralize}" %>
    <% end %>
    - <%= @vacancy.job.business.city %>
  </strong>       
  <div class="subtext">   
    Sector: <%= @vacancy.sector.sector %><br />
    <% if @vacancy.full_time? %>
      Full-time  
    <% else %>
      Part-time 
    <% end %> 
    -
    <% if @vacancy.voluntary? %>
      Voluntary work.
    <% else %>
      Salary: Â£<%= number_with_delimiter(@vacancy.remuneration, :delimiter => ",") %><%= @vacancy.remuneration_rate %>.
    <% end %>
    <br />
    Posted: <%= @vacancy.created_at.strftime("%b %d") %>.
    Deadline: <%= @vacancy.close_date.strftime("%b %d") %>.
    &nbsp;<em>(<%= pluralize(@vacancy.all_completed_applications.count, "applicant") %>)</em>
    <br />
    <% unless @vacancy.notes.empty? %> 
      <%= @vacancy.notes %>
      <br />
    <% end %>
    <% if @details_link == true %>
      <% unless @vacancy.interest_from?(current_user) %>
        <%= link_to "(Full details)", new_vacancy_application_path(@vacancy) %>
      <% else %>
        <% if @vacancy.application_from(current_user).next_action == 1 %>
          <%= link_to "(Review job details & apply)", "#" %>
        <% else %>
          <% if @vacancy.application_from(current_user).submitted? %>
            <%= link_to "(Review your application)", "#" %>
          <% else %>
            <%= link_to "(Continue with application)", "#" %>
          <% end %>
        <% end %>
      <% end %>
      <br />
    <% end %>
    <%= link_to image_tag("details.png"), "#" %> &nbsp;
    <%= link_to "Detailed description of job", "#" %>   
  </div>
</div>

<br />

<h4>You were asked..</h4>

<table class="smaller_font">
  <tr>
    <th class="grayborder round beige">Do you have the experience to ... ?</th>
    <th class="grayborder round beige">You said ...</th>
  </tr>
  <% @responsibilities.each do |responsibility| %>
  <tr>
    <td class="round width_65"><%= responsibility.responsibility.definition %></td>
    <td class="round at_top"><%= responsibility.rating %></td>
  </tr>
  <% end %>
</table>
<br />
<table class="smaller_font">
  <tr>
    <th class="grayborder round beige">How would you rate yourself on ... ?</th>
    <th class="grayborder round beige">You said ...</th>
  </tr>
  <% @qualities.each do |quality| %>
  <tr>
    <td class="round width_65"><%= quality.quality.quality %></td>
    <td class="round at_top"><%= quality.rating %></td>
  </tr>
  <% end %>
</table>
<br />
<table class="smaller_font">
  <tr>
    <th class="grayborder round beige">Do you meet these hiring requirements ... ?</th>
    <th class="grayborder round beige">You said ...</th>
  </tr>
  <% @requirements.each do |requirement| %>
  <tr>
    <td class="round width_65"><%= requirement.requirement.requirement %></td>
    <td class="round at_top"><%= requirement.rating %></td>
  </tr>
  <% end %>
</table>
<br />
<span class="wide_label grayborder round beige">What makes you a great candidate for this job?  &nbsp; You said ...</span>
<div class="info_box_wide grayborder round" style="margin-left: 0px">
  <%= application_message %>
</div>
<br />

<div class = "r-float">
  <%= link_to "Your completed applications list", my_applications_path %><br />
  <%= link_to "Change your application", edit_my_application_path(@application) %>
</div>
<br />

<%= render 'guidance' %>
