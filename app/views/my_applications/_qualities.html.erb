  <h4 class="under over">Are you the right kind of person for this job?</h4>

  <ul class="no_dec">
    <% f.fields_for :applicqualities do |builder2| %>  
      <li>
        <span class="expand" data-id="<%= builder2.object.id %>" style = "cursor:help"><%= image_tag("expand.png") %></span>
        <%= builder2.object.quality.quality %>
        <div>
          <%= builder2.select :applicant_score, @q_scores %>
        <div> 
        
        <div class="div<%= builder2.object.id %> subtext under" style = "display:none">
          <%= builder2.object.quality.pams.first.descriptor %>
          &nbsp; <span class = "conceal" data-id="<%= builder2.object.id %>" style="color:#09c; cursor:n-resize">(Hide)</span>
        </div>
      </li>
    <% end %>
  </ul>
  
<% content_for :javascript do %>

  <%= javascript_tag do %>
    
  $(document).ready(function(){
   
   $(".no_dec li .expand").click(function(event){
     var myVal = $(this).attr("data-id");
     $(".div" + myVal).show();
     $(this).html("<img src= '/images/hide.png' width='15' height='15' alt='Hide' />");
   });
  
   $('.no_dec li .conceal').click(function(event) {
      var myVal = $(this).attr("data-id");
      $(".no_dec li .div" + myVal).hide();
      $(".no_dec li .expand").html("<img src= '/images/expand.png' width='15' height='15' alt='Expand' />");
    });
  
  });
    
  <% end %>
<% end %>
