<div class = "r-float">
  <%= link_to "Menu for this business", officer_home_path %>
</div>

<h1><%= @title %></h1>
<h4><%= @business.name %></h4>

<% unless @departments.empty? %>
 
  <ul>
    <% @departments.each do |department| %>
      <li>
        <%= department.name %> &nbsp;
        <%= link_to "(reactivate)", edit_hidden_department_path(department) %>
        <% unless department.has_inactive_jobs? %>
          &nbsp;
          <%= link_to image_tag("cancel.png", :size => "15x15"), hidden_department_path(department), 
                   :method => :delete, 
                   :confirm => "Are you sure you want to delete #{department.name} completely?",
                   :title => "Delete #{department.name} completely" %>
          
        <% end %>
      
      </li>
      
    <% end %>
  </ul>
<% else %>
  <div class="no_data round">
    There are no archived departments.
  </div>
<% end %>
